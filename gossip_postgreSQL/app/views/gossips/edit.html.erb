<h1>Editer l'article</h1>

    <%= form_for @gossip do |f| %>
    	<div class="form-group">

      <label>Title%></label>
      <%= f.text_field :title, class: 'form-control' %></div>
     <div class="form-group">

      <label>Content%></label>
      <%= f.text_field :content, class: 'form-control' %></div>
      <div class="form-group">
      	<button type="submit" class="btn btn-primary">Changer le gossip</button>
      </div>
  	<% end %>