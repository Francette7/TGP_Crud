<html>
  <body>
    
    <%= form_tag url_for(action: 'create'), method: "gossip" do %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @gossip.title %>
      <br /> <br />

      <%= label_tag 'Content' %>
      <%= text_area_tag 'body', @content %>
      <br /> <br />

      <%= label_tag 'Author' %>
      <%= text_field_tag 'author', @gossip.user %>
      <br /> <br />

      <%= submit_tag "Create Gossip" %>

    <% end %>

    <!-- ... -->
  </body>
</html>